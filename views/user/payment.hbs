<h6 class="coupon__code text-center fs-4 ">BILLING DETAILS</h6>
<div id="" class="container " style="max-width: 1300px;">
    <div class="fw-bold">
        <a href="/addNewAddress" class=" btn border border-2 rounded mb-1"
            style="font-weight: bolder; color: #FF0000;">Add NewAddress</a>
    </div>
    <div class="container">
        <div class="row">
            <div id="content" class="col-xs-12">
                <section id="main">
                    <div class=" row">
                        <!-- Left Block: cart product informations & shpping -->
                        <div class="card-header d-flex justify-content-center  col-md-6 col-xs-12 col-lg-8">
                            SAVED ADDRESSES
                        </div>
                        <div class=" col-md-6 col-xs-12 col-lg-8 overflow-auto mb-4 scrollbar scrollbar-rare-wind">
                            <!-- cart address detailed -->
                            <div class="card">
                                <div class="row">
                                    <div class="col-md-12 cart">
                                        <div class="title">
                                            <div class="row">
                                                {{!-- <div class="col">
                                                    <h4><b>Shopping Cart</b></h4>
                                                </div> --}}
                                            </div>
                                        </div>
                                        <div class="container" style="max-width: 800px;">
                                            {{#each address}}
                                            <div class="form-check">
                                                <div class="">
                                                    <input class="form-check-input" type="radio" name="checkoutAddress"
                                                        onclick="selectAddress('{{this._id}}')">
                                                    <label class="form-check-label">
                                                        Home
                                                    </label>
                                                </div>
                                                <div class="card-body">
                                                    <p class="card-text"
                                                        style="font-weight: bolder; font-size: large; color: black;">
                                                        {{this.Name}}
                                                    </p>
                                                    <p class="card-text">{{this.Address}}</p>
                                                    <p class="card-text">{{this.City}}</p>
                                                    <p class="card-text">{{this.Pincode}}</p>
                                                    <p class="card-text">{{this.Mobile}}</p>
                                                    <input type="text " name="userId" value="{{user._id}}" hidden>
                                                </div>
                                            </div>
                                            <hr>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- shipping informations -->
                        </div>


                        <!-- Right Block: cart subtotal & cart total -->
                        <div class=" col-md-6 col-xs-12 col-lg-4" style="margin-top: -65px;">
                            <div class="">
                                <div class="cart-detailed-totals">
                                    <div class="card-block">
                                        <div class="form-check ms-4">
                                            <input class="form-check-input" type="radio" name="PaymentMethod"
                                                id="paypal" value="ONLINE" onclick="selectPayment('ONLINE')" />
                                            <label class="form-check-label" for="paypal" style="font-weight: bolder;">
                                                ONLINE
                                            </label>
                                        </div>


                                        <div class="form-check mt-2 ms-4">
                                            <input class="form-check-input" type="radio" name="PaymentMethod" id="COD"
                                                value="COD" onclick="selectPayment('COD')" />
                                            <label class="form-check-label" for="COD" style="font-weight: bolder;">
                                                COD
                                            </label>
                                        </div>

                                        <div class="form-check mt-2 ms-4">
                                            <input class="form-check-input" type="radio" name="PaymentMethod"
                                                id="PAYPAL" value="PAYPAL" onclick="selectPayment('PAYPAL')" />
                                            <label class="form-check-label" for="PAYPAL" style="font-weight: bolder;">
                                                PAYPAL
                                            </label>
                                        </div>
                                        <div class="">
                                            <form id="couponValidate">
                                                <label class="">Coupon Code</label>  <span class="text-danger" id="couponUsed"></span>
                                                <span class="text-danger" id="coupon-error"></span>
                                            <input type="text" class="form-control mb-1" id="couponCode" onkeyup="validateCouponCode()" value="{{couponcode}}" name="code">
                                            <button type="submit" class="close" data-dismiss="alert"
                                                        aria-label="Close">
                                                        <span aria-hidden="true"
                                                            onclick="removeCoupon('{{couponcode}}')"><i
                                                                class="fa fa-close fa-sm"></i></span></a>
                                                    </button>
                                            <button class="btn btn-sm rounded btn-success" onclick=return"validateCoupon()">Submit</button>
                                            </form>
                                        </div>
                                    </div>

                                    <hr class="separator">

                                    <div class="card-block">
                                        <div class="cart-summary-line cart-total">
                                            <span class="label">Total (tax excl.)</span>
                                            <span class="value">{{totalAmt}}</span>
                                            <span class="value">&#8377;</span>
                                        </div>

                                        {{!-- <div class="cart-summary-line">
                                            <small class="label">Taxes</small>
                                            <small class="value">&#8377;0.00</small>
                                        </div> --}}
                                    </div>

                                    <hr class="separator">
                                </div>




                                <div class="checkout text-sm-center card-block">
                                    <button type="button" class="btn btn-primary"
                                        onclick="placeOrder()">Checkout</button>
                                </div>
                                <input type="text" id="userName" value="{{user.Name}}" disabled hidden>
                                <input type="text" id="userPhone" value="{{user.Phone}}" disabled hidden>
                                <input type="text" id="userEmail" value="{{user.Email}}" disabled hidden>


                            </div>





                            <div id="block-reassurance">
                                <ul>
                                    <li>
                                        <div class="block-reassurance-item">
                                            <img src="http://demo.posthemes.com/pos_ecolife_fashion/modules/blockreassurance/img/ic_verified_user_black_36dp_1x.png"
                                                alt="Security policy (edit with Customer reassurance module)">
                                            <span class="h6">Security policy (edit with Customer reassurance
                                                module)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="block-reassurance-item">
                                            <img src="http://demo.posthemes.com/pos_ecolife_fashion/modules/blockreassurance/img/ic_local_shipping_black_36dp_1x.png"
                                                alt="Delivery policy (edit with Customer reassurance module)">
                                            <span class="h6">Delivery policy (edit with Customer reassurance
                                                module)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="block-reassurance-item">
                                            <img src="http://demo.posthemes.com/pos_ecolife_fashion/modules/blockreassurance/img/ic_swap_horiz_black_36dp_1x.png"
                                                alt="Return policy (edit with Customer reassurance module)">
                                            <span class="h6">Return policy (edit with Customer reassurance
                                                module)</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>



                        </div>
                    </div>
                </section>




            </div>



        </div>

    </div>


</div>




</main>
<div class="back-top"><a href="#" class="back-top-button"></a></div>

<script type="text/javascript"
    src="http://demo.posthemes.com/pos_ecolife_fashion/themes/theme_ecolife_fashion1/assets/cache/bottom-e7e67c14.js"></script>





<div id="poscompare-notification" class="">
    <div class="notification-inner">
        <span class="notification-title"><i class="fa fa-check" aria-hidden="true"></i> Product added to
            compare.</span>
    </div>
</div>

