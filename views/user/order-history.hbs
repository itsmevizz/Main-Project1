{{#each orders}}
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="row p-2 bg-white border rounded">
                <div class="col-md-6 mt-1">
                    <h5>OrderId: {{this._id}}</h5>
                    {{!-- <div class="mt-1 mb-1 spec-1"><span>100% cotton</span><span class="dot"></span><span>Light
                            weight</span><span class="dot"></span><span>Best finish<br></span></div>
                    <div class="mt-1 mb-1 spec-1"><span>Unique design</span><span class="dot"></span><span>For
                            men</span><span class="dot"></span><span>Casual<br></span></div> --}}
                    <p class="text-justify text-truncate para mb-0"><span class="fw-bold fst-italic">Name:</span>
                        <span>{{this.deliveryDetails.Name}}</span> <br><span class="fw-bold fst-italic"> Address:
                        </span>{{this.deliveryDetails.Address}} <br></span><span class="fw-bold fst-italic"> Pincode:
                        </span>{{this.deliveryDetails.Pincode}} <br><span class="fw-bold fst-italic"> Number:
                        </span>{{this.deliveryDetails.Mobile}} <br>
                        <span class="fw-bold fst-italic"> Date: </span>{{moment this.Date format="DD-MM-YYYY"}} <br>
                    </p>
                    {{!-- {{#each this.products}}
                    <div class="d-flex flex-row">
                        <span>Quantity:</span><span>{{item}}</span>
                    </div>
                    {{/each}} --}}
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center ">
                        <h4 class="mr-1">Total â‚¹{{this.totalAmount}}</h4><span class="strike-text"></span>
                    </div>
                    <h6 class="text-success">{{this.status}}</h6>
                    <div class="d-flex flex-column mt-4"><a href="/view-order/?id={{this._id}}">
                    <button class="btn btn-success btn-sm" type="button">View
                            Order</button>
                    </a><a><button class="btn btn-warning btn-sm mt-1" type="button"
                            onclick="cancelOrder('{{this._id}}','{{this.totalAmount}}')" >Cancel Order</button></a></div>
                </div>
            </div>



        </div>
    </div>
</div>
{{/each}}

<style>
    body {
        background: #eee
    }

    .ratings i {
        font-size: 16px;
        color: red
    }

    .strike-text {
        color: red;
        text-decoration: line-through
    }

    .product-image {
        width: 100%
    }

    .dot {
        height: 7px;
        width: 7px;
        margin-left: 6px;
        margin-right: 6px;
        margin-top: 3px;
        background-color: blue;
        border-radius: 50%;
        display: inline-block
    }

    .spec-1 {
        color: #938787;
        font-size: 15px
    }

    h5 {
        font-weight: 400
    }

    .para {
        font-size: 16px
    }
</style>